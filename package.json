{
    "name": "@provenanceio/cavendish",
    "description": "One-step Provenance blockchain",
    "homepage": "https://provenance.io/",
    "version": "1.12.0",
    "private": false,
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "module": "lib.esm/index.js",
    "bin": {
        "cavendish": "./bin/cavendish",
        "provenanced": "./bin/provenanced"
    },
    "files": [
        "bin",
        "lib",
        "lib.esm"
    ],
    "repository": {
        "type": "git",
        "url": "git://github.com/provenance-io/cavendish.git"
    },
    "license": "Apache-2.0",
    "scripts": {
        "compile": "npx tsc",
        "build": "npm run compile && ./scripts/install-bins",
        "clean": "npx rimraf lib && ./scripts/uninstall-bins",
        "prepublishOnly": "npm run build",
        "rebuild": "npm run clean && npm run build",
        "test": "export NODE_ENV=test && mocha --require ts-node/register test/**/*.test.ts"
    },
    "devDependencies": {
        "@types/chai": "^4.2.22",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.11.6",
        "@types/ps-tree": "^1.1.1",
        "@types/rimraf": "^3.0.2",
        "@types/ripemd160": "^2.0.0",
        "chai": "^4.3.4",
        "download": "^8.0.0",
        "eslint": "^8.2.0",
        "fs-extra": "^10.1.0",
        "mocha": "^9.1.2",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.4",
        "unzipper": "^0.10.11"
    },
    "dependencies": {
        "bech32": "^2.0.0",
        "bignumber.js": "^9.0.1",
        "bip32": "^3.0.1",
        "bip39": "^3.0.4",
        "commander": "^8.3.0",
        "find-process": "^1.4.5",
        "lodash": "^4.17.21",
        "ps-tree": "^1.2.0",
        "rimraf": "^3.0.2",
        "ripemd160": "^2.0.2",
        "tiny-secp256k1": "^2.1.1",
        "wait-port": "^0.2.9"
    },
    "provenance": {
        "downloadUrl": "https://github.com/provenance-io/provenance/releases/download/v%VERSION%/provenance-%PLATFORM%-%ARCH%-v%VERSION%.zip",
        "plaforms": {
            "amd64": [
                "darwin",
                "linux"
            ]
        },
        "aliases": {
            "amd64": [
                "x64"
            ]
        }
    }
}
